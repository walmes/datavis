  \framebreak

  \begin{itemize}
  \item \textbf{Nome}: Choropleth map (grego: \enquote{área/região} $+$
    \enquote{magnitude}).
  \item \textbf{Função}: retratar uma variável quantitativa em um espaço
    demarcado.
  \item \textbf{Tipo de escala}: quantitativa $\times$ geográfica.
  \item \textbf{Variáveis visuais}: preenchimento.
  \item \textbf{Geometria}: polígonos.
  \item \textbf{Aplicação Shiny}:
    \url{http://shiny.leg.ufpr.br/walmes/mapaufpr/}.
  \end{itemize}

\end{frame}

\begin{frame}[allowframebreaks]{Bubble map}

  \begin{figure}[h]
    \centering
    \includegraphics[width = 5.5cm]{img/brasil-tradicoes-indigenas.png}
